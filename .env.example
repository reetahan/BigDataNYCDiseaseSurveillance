# Bluesky Scraper Configuration

# Bluesky Authentication (required for API access)
BLUESKY_HANDLE=your_handle.bsky.social
BLUESKY_PASSWORD=your_app_password

# Kafka Settings
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=social-media
ENABLE_KAFKA=false

# Scraper Settings
SCRAPE_INTERVAL=300
MAX_POSTS_PER_SEARCH=100
OUTPUT_FILE=data/bluesky_posts.jsonl

# Custom Keywords (comma-separated)
CUSTOM_HEALTH_KEYWORDS=
CUSTOM_NYC_KEYWORDS=

# Rate Limiting
RATE_LIMIT_DELAY=2

# Logging
LOG_LEVEL=INFO
